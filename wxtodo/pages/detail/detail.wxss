/* pages/detail/detail.wxss */
.content{
  padding: 0 25rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color:#ccc;
}
.content>view{
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eee;
}
input{
  height: 80rpx;
  margin: 10rpx 0;

}
button{
  background: green;
  color:white;
  font-size: 36rpx;
  width: 100%;
}
.tagsList{
  display: flex;
}
.tagsList view{
  padding: 10rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 200rpx;
  border: 1px solid green;
  margin-right:10rpx;
}